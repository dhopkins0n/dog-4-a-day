<div class="page-container mt-5">
<div class="form-container">
<h1 class="mt-5">Your dog</h1>
<p class="pb-5">Edit the details about your dog</p>
<%= simple_form_for(@dog) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :breed %>
    <%= f.input :description %>
    <%= f.input :summary %>
    <% @dog.images.each do |image| %>
    <%= f.hidden_field :images, multiple: true, value: image.signed_id %>
    <% end %>
    <%= f.file_field :images, multiple: true %>
    <%= f.input :tag_list, as: :check_boxes, input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' ,collection: [ 'Neutered ✂️', 'good with cats 🐈', 'good with children 👶🏽', 'good with other dogs 🐶', 'need company ✋🏽', 'need exercise 🎾' ] %>

  </div>

  <div class="form-actions">
<%= f.button :submit, class: "btn-white" %>
  </div>
<% end %>
<div class="d-flex gap-3 mt-3">
<%= link_to "Show this dog", @dog, class: "dog-links" %>
<%= link_to "Back to All Dogs", dogs_path, class: "dog-links" %>
</div>
</div>
</div>
</div>
