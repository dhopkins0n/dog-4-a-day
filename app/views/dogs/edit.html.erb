<%= simple_form_for(@dog) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :breed %>
    <%= f.input :description %>
    <% @dog.images.each do |image| %>
    <%= f.hidden_field :images, multiple: true, value: image.signed_id %>
    <% end %>
    <%= f.file_field :images, multiple: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to "Show this dog", @dog %>
<%= link_to "Back to All Dogs", dogs_path %>
