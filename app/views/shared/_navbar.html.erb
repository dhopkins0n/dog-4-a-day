<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <img src="https://images.unsplash.com/photo-1537151625747-768eb6cf92b2?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fGRvZ3xlbnwwfHwwfHx8MA%3D%3D" class="navbar-logo">
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <% if current_user %>
              <%= link_to "Welcome, #{current_user.first_name}", "#", class: "nav-link" %>
            <% else %>
              <%= link_to "Welcome", "#", class: "nav-link" %>
            <% end %>
          </li>
          <li class="nav-item">
            <a href="#" class="avatar">
              <% if current_user.photo.attached?%>
               <%= cl_image_tag current_user.photo.key, class: "avatar"  %>
              <% else %>
                <%= image_tag "avatar_placeholder.webp", class: "avatar" %>
              <% end %>

            </a>


          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link btn btn-ghost" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-ghost" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
