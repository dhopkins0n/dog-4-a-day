
<%= simple_form_for  [dog, booking] do |f| %>
  <%# <%=  f.input :date,
              label: false,
              as: :string,
              input_html: { class: "d-none", data: { controller: "datepicker", inline: true } }  %>
  <%= f.input :start_time, label: 'Start Time',  as: :string,
              input_html: { class: "d-none", data: { controller: "datepicker", inline: true } } %>
  <%= f.input :end_time, label: 'End Time',  as: :string,
              input_html: { class: "d-none", data: { controller: "datepicker", inline: true } }%>
  <% if booking != nil %>
  <%= f.input :status, as: :hidden, input_html: { value: 'Pending'} %>
  <%else %>
  <%= f.input :status, collection: ['Pending', 'Approved', 'Declined', 'Completed'] %>
  <% end %>
  <%= f.button :submit, class: "btn btn-primary"%>
<% end %>
